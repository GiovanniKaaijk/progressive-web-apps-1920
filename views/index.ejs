<%- include ./partials/head.ejs %>
<h1 class="hidden"></h1>
<div class="container">
  <form action="/search" method="POST" class="search">
    <div>
      <label for="search">Search</label>
      <input id="search" name="search" id="search" type="text">
      <button name="submit" type="submit"><img src="/images/search.svg" alt=""></button>
    </div>
  </form>
  <% if (query === false) { %>
  <h1><%- heading %></h1>
  <% } %>
  <div class="grid">
    <%for (var i in data.results){%>
      <div class="img-wrapper">
          <a href="/detail/<%=data.results[i].id%>" aria-label="<%=data.results[i].id%>">
            <img src="<%=data.results[i].urls.regular%>" alt="">
          </a>
        </div>    
    <%}%>
</div>
</div>
<script src="/dist/index.bundle.js"></script>
<%- include ./partials/footer.ejs %>